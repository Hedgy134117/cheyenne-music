{% extends "base.njk" %}

{% block title %}Top 50 Songs{% endblock %}

{% block head %}
<style>
    .excerpt {
        margin: 1em 0;
        display: flex;
        align-items: center;
        font-family: 'Times New Roman', Times, serif;
    }

    li:nth-child(even) .excerpt {
        flex-direction: row-reverse;
    }

    .excerpt-content p {
        flex-grow: 1;
        display: inline;
    }

    .excerpt-img {
        margin-left: 4em;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .excerpt-img img {
        height: 150px;
    }

    li:nth-child(even) .excerpt-img {
        margin-left: 0;
        margin-right: 4em;
    }

    @media only screen and (max-width: 540px) {
        .excerpt {
            flex-direction: column-reverse;
        }

        li:nth-child(even) .excerpt {
            flex-direction: column-reverse;
        }

        .excerpt-img {
            margin-left: 0;
            margin-bottom: 1em;
            align-self: center;
        }

        .excerpt-img img {
            height: 200px;
        }

        li:nth-child(even) .excerpt-img {
            margin-left: 0;
            margin-right: 0;
        }
    }
</style>
{% endblock %}

{% block content %}
<p class="heading center">Top 50 Songs</p>
<ol reversed>
    {% set sortedSongs = collections.song | sort(true, false, attribute="data.rank") %}
    {% for song in sortedSongs %}
    {% set rank = song.data.rank %}
    <li class="song" id="{{ song.data.rank }}" style="">
        {% if not song.data.is_short %}
        <a href="{{ song.url }}">
            <i>{{ song.data.title | markdownin | safe }}</i> by {{ song.data.artist | markdownin | safe }}
        </a>
        {% else %}
        <i>{{ song.data.title | markdownin | safe }}</i> by {{ song.data.artist | markdownin | safe }}
        {% endif %}

        {% if song.page.excerpt %}
        <div class="excerpt">
            <div class="excerpt-content">
                {{ song.page.excerpt | markdown | safe }}
                {% if not song.data.is_short %}<a href="{{ song.url }}" style="color: gray;">Read
                    more&hellip;</a>{%
                endif %}
            </div>
            <div class="standard-dialog center excerpt-img">
                <img src="{{ song.data.img_url }}" alt="{{ song.data.title }} cover" loading="lazy">
            </div>
        </div>
        {% endif %}
        <hr>
    </li>
    {% endfor %}
</ol>
{% endblock%}